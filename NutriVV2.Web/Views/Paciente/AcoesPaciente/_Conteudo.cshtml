@model IEnumerable<NutriV2.Domain.Paciente>

@{
    NutriV2.Domain.Paciente pacienteDetalhado = ViewBag.Paciente;
}


<div class="row">
    <div class="col-12 mt-4">
        <div class="row">
            <div class="col-4">
                Pesquisar
                <div class="input-group is-invalid">
                    <div class="custom-file">
                        <input type="tel" class="form-control" />
                    </div>
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">Button</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-12 col-md-4 col-lg-4 mt-4">
        <div class="row p-1">
            <div class="col-12 pb-2" style="border-radius: 25px; border: solid 2px #e4e2e2;">
                <h3 class="text-center" style="color: #918f8f;">Pacientes</h3>
                <div class="m-auto p-2 bg-white" style="width: 95%; border: solid 1px #d8d8d8; border-radius: 5px; height: 410px; overflow:auto;">
                    <table class="table table-striped">
                        <tbody id="listaDepacientes">
                            <partial name="AcoesPaciente/_ListaDePacientes" for="@Model" />
                        </tbody>
                    </table>
                </div>

                <button onclick="AbrirModalParaCadastro()" class="float-right mr-2 btn btn-outline-secondary mt-3">Cadastrar Novo Paciente</button>

            </div>
        </div>
    </div>
    @if (pacienteDetalhado != null)
    {
        <div class="col-sm-12 col-md-4 col-lg-4 mt-4">
            <div class="row p-1">
                <div class="col-12 pb-2" style="border-radius: 25px; border: solid 2px #e4e2e2;">
                    <h3 class="text-center" style="color: #918f8f;">Dados Pessoais</h3>
                    <div class="m-auto p-3 bg-white" style="width: 95%; border: solid 1px #d8d8d8; border-radius: 5px; height: 410px;" id="dadosPessoais">
                        <partial name="AcoesPaciente/_DetalhesPaciente" for="@pacienteDetalhado" />
                    </div>
                    <button class="btn btn-light ml-2 mt-3">Consultas</button>
                    <a href="@Url.Action("AvaliacoesDoPaciente","Paciente",new {Id=pacienteDetalhado.Id})"  class="btn btn-light ml-2 mt-3">Avaliações</a>
                    <button class="btn btn-light ml-2 mt-3">Dietas</button>
                    <a href="#" class="btn btn-light ml-2 mt-3">Pagamentos</a>
                    <button type="button" value="@pacienteDetalhado.Id" onclick="AbrirFormulariEdicao(this.value)" class="btn btn-light ml-2 mt-3">Editar</button>
                    <button type="button" value="@pacienteDetalhado.Id" onclick="ExcluirPaciente(this.value)" class="btn btn-light ml-2 mt-3">Excluir</button>
                </div>
            </div>

        </div>
        <div class="col-sm-12 col-md-4 col-lg-4 mt-4">
            <div class="row p-1">
                <div class="col-12 pb-2" style="border-radius: 25px; border: solid 2px #e4e2e2;">
                    <h3 class="text-center" style="color: #918f8f;">Anotações</h3>
                    <div class="m-auto bg-white" style="width: 95%; border: solid 1px #d8d8d8; border-radius: 5px; height: 410px" id="observacoes">

                    </div>
                </div>
            </div>

        </div>
    }
</div>